{
  "name": "digiturnos",
  "version": "1.0.0",
  "description": "Sistema de turnos digital para clínicas y centros de salud",
  "main": "index.html",
  "scripts": {
    "start": "npx serve .",
    "dev": "npx live-server --port=3000 --open=index.html",
    "build": "npm run minify:css && npm run minify:js",
    "minify:css": "npx clean-css-cli -o dist/styles.min.css styles.css",
    "minify:js": "npx terser script.js config.js utils.js -o dist/app.min.js --compress --mangle",
    "lint:js": "npx eslint *.js",
    "lint:css": "npx stylelint *.css",
    "test": "npx jest",
    "docs": "npx jsdoc -d docs/ *.js",
    "deploy": "npm run build && npm run copy:files",
    "copy:files": "cp index.html dist/ && cp -r assets dist/ 2>/dev/null || :",
    "validate": "npx html-validate index.html"
  },
  "keywords": [
    "turnos",
    "queue-management",
    "healthcare",
    "clinic",
    "digital-signage",
    "patient-management",
    "spanish",
    "colombia"
  ],
  "author": {
    "name": "DigiTurnos Development Team",
    "email": "desarrollo@clinicatorcoroma.com"
  },
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/clinica-torcoroma/digiturnos.git"
  },
  "bugs": {
    "url": "https://github.com/clinica-torcoroma/digiturnos/issues"
  },
  "homepage": "https://clinica-torcoroma.github.io/digiturnos",
  "devDependencies": {
    "clean-css-cli": "^5.6.2",
    "eslint": "^8.57.0",
    "html-validate": "^8.9.1",
    "jest": "^29.7.0",
    "jsdoc": "^4.0.2",
    "live-server": "^1.2.2",
    "serve": "^14.2.1",
    "stylelint": "^16.2.1",
    "terser": "^5.27.0"
  },
  "dependencies": {},
  "browserslist": [
    "last 2 versions",
    "> 1%",
    "not dead",
    "not ie <= 11"
  ],
  "engines": {
    "node": ">=14.0.0",
    "npm": ">=6.0.0"
  },
  "files": [
    "index.html",
    "styles.css",
    "script.js",
    "config.js",
    "utils.js",
    "assets/",
    "dist/",
    "README.md",
    "LICENSE"
  ],
  "directories": {
    "doc": "docs",
    "test": "tests"
  },
  "config": {
    "port": 3000,
    "host": "localhost"
  },
  "jest": {
    "testEnvironment": "jsdom",
    "testMatch": [
      "**/tests/**/*.test.js"
    ],
    "collectCoverageFrom": [
      "*.js",
      "!config.js"
    ],
    "coverageDirectory": "coverage",
    "coverageReporters": [
      "html",
      "text",
      "lcov"
    ]
  },
  "eslintConfig": {
    "env": {
      "browser": true,
      "es2021": true
    },
    "extends": [
      "eslint:recommended"
    ],
    "parserOptions": {
      "ecmaVersion": 2021,
      "sourceType": "script"
    },
    "globals": {
      "DigiTurnosUtils": "readonly",
      "DIGITURNOS_CONFIG": "readonly",
      "CONFIG_UTILS": "readonly"
    },
    "rules": {
      "no-unused-vars": "warn",
      "no-console": "off",
      "semi": ["error", "always"],
      "quotes": ["error", "single"],
      "indent": ["error", 4]
    }
  },
  "stylelint": {
    "extends": [
      "stylelint-config-standard"
    ],
    "rules": {
      "at-rule-no-unknown": [
        true,
        {
          "ignoreAtRules": [
            "tailwind",
            "apply",
            "variants",
            "responsive",
            "screen"
          ]
        }
      ]
    }
  },
  "metadata": {
    "title": "DigiTurnos - Sistema de Turnos Digital",
    "description": "Sistema completo de gestión de turnos digitales para clínicas y centros de salud. Incluye generación de tickets, llamado por voz, panel de visualización y administración.",
    "category": "Healthcare Management",
    "tags": [
      "healthcare",
      "queue-management",
      "patient-flow",
      "digital-signage",
      "clinic-management",
      "appointment-system"
    ],
    "features": [
      "Generación automática de tickets",
      "Sistema de llamado por voz (TTS)",
      "Panel de visualización en tiempo real",
      "Administración de múltiples ventanillas",
      "Impresión de tickets",
      "Estadísticas en tiempo real",
      "Interface responsive",
      "Soporte multi-servicio",
      "Sin base de datos requerida"
    ],
    "requirements": {
      "browser": "Modern browsers with Web Speech API support",
      "javascript": "ES2015+ support required",
      "permissions": "Speech synthesis, printing"
    },
    "languages": {
      "interface": "Spanish (es-CO)",
      "tts": "Spanish (es-ES)",
      "code": "JavaScript/HTML/CSS"
    }
  }
}